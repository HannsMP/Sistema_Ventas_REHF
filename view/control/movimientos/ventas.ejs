<div class="content-body">
  <div class="menu-body">
    <div class="card">
      <div class="card-head">
        <h3 class="card-tittle">Reporte de Ventas</h3>
        <a class="btn btn-danger" id="clear">Limpiar</a>
      </div>
      <div class="card-body">
        <div class="card-form">
          <div class="form-box">
            <form>
              <div class="form-body">
                <div class="form-col">
                  <div class="input-box input-selector">
                    <input class="selector" type="search" id="selector-metodo-pago" placeholder="Buscar categoria...">
                    <label for="Transaccion">Transaccion:</label>
                  </div>
                  <div class="input-box">
                    <input name="igv" type="text" id="importe-igv" disabled>
                    <label for="igv">IGV:</label>
                  </div>
                </div>
                <div class="form-col">
                  <div class="input-box  input-selector">
                    <input class="selector" type="search" id="selector-cliente" placeholder="Buscar categoria...">
                    <label for="cliente">Cliente:</label>
                  </div>
                  <div class="input-box">
                    <input name="serie" type="text" id="numero-serie" oninput="inputCapitalize(this, 20)" required>
                    <label for="serie">Numero de Serie:</label>
                  </div>
                </div>
                <div class="form-col">
                  <div class="input-box">
                    <textarea name="comentario" id="comentario" class="scroll-y"
                      oninput="autoHeight(this); inputParagraphCase(this, 250);" required></textarea>
                    <label for="comentario">Comentario (250):</label>
                  </div>
                </div>
              </div>
              <table id="table-main" style="width: 100%;">
                <thead>
                  <tr>
                    <th>Cantidad</th>
                    <th>Producto</th>
                    <th>Precio Unitario</th>
                    <th>Total</th>
                  </tr>
                </thead>
              </table>
              <div class="form-foot">
                <a class="btn btn-info" style="width: 100%;" id="add-row">
                  <i class="bx bx-plus-circle"></i>
                </a>
              </div>
              <div class="form-foot">
                <div class="f-row">
                  <div class="input-box">
                    <input name="venta" type="text" id="importe-total" value="0" oninput="inputFloat(this, 10, 2);"
                      style="text-align: center;" required>
                    <label for="venta">Importe Total:</label>
                  </div>
                </div>
                <a class="btn btn-success" id="save">guardar</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="card" id="card-table-main">
      <div class="card-head">
        <h3 class="card-tittle">Ventas de hoy</h3>
      </div>
      <div class="card-body">
        <div class="table-box">
          <table id="table-historial" style="width: auto;">
            <thead>
              <tr>
                <th>Codigo</th>
                <th>Cliente</th>
                <th>Transaccion</th>
                <th>Descuento</th>
                <th>Importe</th>
                <th>hora</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

